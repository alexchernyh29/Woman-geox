.test
    position relative
    width 100%
    height 100%
    background url('/images/fon-test.jpg') no-repeat center
    background-size cover
    overflow hidden
    +below(1200px)
        background url('/images/mobile-test.jpg') no-repeat center
        background-size cover
        height 100%

    &[data-id="1"]
        .test__text_2
            right w(790)

    &[data-id="3"]
        .test__text_2
            right w(720)

    &[data-id="5"]
        .test__text_1
            left w(720)

    &__title
        font-family $ff-FuturaPT
        text-transform uppercase
        padding-top w(60)
        font-size w(72)
        line-height w(75)
        text-align center
        font-weight 700
        +below(1200px)
            font-size wm(50)
            line-height 1

    &__counter
        font-family $ff-FuturaPTMedium
        font-weight 700
        position absolute
        letter-spacing 0.03em
        left 43%
        bottom  w(35)
        font-size w(144)
        line-height w(144)
        color #FFF

    &__list
        position relative
        height 100%
        display flex
        flex-flow row nowrap
        justify-content space-between
        align-items stretch
    
    &__item
        position relative
        height 100%
        width 40%
        cursor pointer

        &:hover
            .test__foto,
            .test__text
                transform scale(110%)
    
    &__sign
        position relative
        height 100%

    &__wrap
        display flex
        flex-flow column
        height 100%

    &__foto,
    &__text
        transition transform .3s

    &__foto_1
        position absolute
        bottom 0
        left 0
        width 100%
        img
            width 100%
        
    &__foto_2
        position absolute
        bottom 0
        right 0
        width 100%
        img
            width 100%
       
    &__text_1
        font-family $ff-FuturaPT
        font-weight 200
        position absolute
        left w(590)
        top w(60)
        font-size w(48)
        line-height w(64)
        z-index 2
        +below(1200px)
            top wm(60)
            left wm(350)
            font-size wm(36)
            line-height 1.2

    &__text_2 
        font-family $ff-FuturaPT
        font-weight 200
        position absolute
        right w(590)
        top w(60)
        font-size w(48)
        line-height w(64)
        z-index 2
        +below(1200px)
            top wm(60)
            right wm(350)
            font-size wm(36)
            line-height 1.2
